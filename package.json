{
  "name": "@base-org/base-web",
  "version": "1.0.0",
  "description": "Base web monorepo",
  "repository": "git@github.com::base/base-web.git",
  "license": "Apache-2.0",
  "scripts": {
    // Run 'build' across all packages, excluding the bridge app for efficiency/timing.
    "build": "yarn workspaces foreach --exclude @app/bridge run build",
    // Run 'lint' across all packages, excluding the bridge app.
    "lint": "yarn workspaces foreach --exclude @app/bridge run lint",
    // Run 'test' across all packages, excluding the bridge app.
    "test": "yarn workspaces foreach --exclude @app/bridge run test",
    // End-to-end (E2E) testing scripts, focused on the main web application.
    "test:e2e": "yarn workspace @app/web test:e2e",
    "test:e2e:ui": "yarn workspace @app/web test:e2e:ui",
    "test:e2e:debug": "yarn workspace @app/web test:e2e:debug",
    "test:e2e:headed": "yarn workspace @app/web test:e2e:headed",
    
    // --- Husky/Package Management Hooks ---
    // Use 'prepare' for Husky installation, which is run after install/when published.
    // This is the recommended approach for Husky v6+ integration with Yarn 3.
    "prepare": "if [ -d .husky ]; then husky install; fi",
    "postinstall": "yarn prepare",
    
    // Disable pre-publish hooks before publishing (pinst >= 2).
    "prepublishOnly": "pinst --disable",
    // Re-enable pre-publish hooks after publishing.
    "postpublish": "pinst --enable"
  },
  // Define workspaces structure for Yarn Monorepo management.
  "workspaces": [
    "apps/*",
    "examples/*",
    "libs/*",
    "packages/*"
  ],
  "devDependencies": {
    // Testing and tooling dependencies (Jest, Playwright, ESLint, TypeScript).
    "@babel/preset-react": "^7.14.5",
    "@coinbase/onchaintestkit": "^1.1.0",
    "@graphql-eslint/eslint-plugin": "^3.10.4",
    "@playwright/test": "^1.53.1",
    "@swc/core": "^1.2.173",
    "@swc/jest": "0.2.20",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "14.0.0",
    "@types/jest": "^29.4.0",
    "@types/node": "18.14.2",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    // ESLint and TypeScript tooling (high versions suggest continuous maintenance).
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "@typescript-eslint/type-utils": "^7.8.0",
    "@typescript-eslint/types": "^7.8.0",
    "@typescript-eslint/utils": "^7.8.0",
    "babel-jest": "^29.4.1",
    "babel-plugin-relay": "^14.1.0",
    "babel-plugin-tsconfig-paths": "^1.0.3",
    "eslint": "^8.27.0",
    // Standard and custom ESLint configurations for quality assurance.
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-next": "15.1.9",
    "eslint-config-prettier": "^8.5.0",
    "eslint-formatter-codeframe": "^7.32.1",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-compat": "^4.0.2",
    "eslint-plugin-cypress": "^2.10.3",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "^27.1.4",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-react-perf": "^3.3.1",
    "eslint-plugin-relay": "^1.8.3",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "file-loader": "^6.2.0",
    "husky": ">=6",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "lint-staged": ">=10",
    "pinst": ">=2",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-test-renderer": "18.2.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "~4.9.4"
  },
  // Overrides specific package versions for stability or compatibility.
  "resolutions": {
    "@coinbase/cookie-manager": "1.1.1",
    "next-transpile-modules": "^10.0.0",
    "wagmi": "2.14.12"
  },
  "resolutionComments": {
    "next-transpile-modules": "Next compatibility"
  },
  "engines": {
    // Enforce Node.js version greater than the specified LTS version.
    "node": ">18.20.3"
  },
  // Specify the package manager version for deterministic installations.
  "packageManager": "yarn@3.5.0",
  "dependencies": {
    // Core runtime dependencies.
    "@datadog/browser-logs": "^5.23.3",
    "@linaria/babel-preset": "^4.4.3",
    "@next/bundle-analyzer": "^15.1.9",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-select": "^1.2.1",
    "@radix-ui/react-tooltip": "^1.1.2",
    "classnames": "^2.3.2",
    "clsx": "^1.2.1",
    "moment": "^2.29.4",
    "next": "15.1.9",
    "tslib": "^2.3.0"
  },
  // Linting and formatting rules applied to staged Git files before commit.
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{ts,tsx,css,md}": "prettier --write"
  }
}
